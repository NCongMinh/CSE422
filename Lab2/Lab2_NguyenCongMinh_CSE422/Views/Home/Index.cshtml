@model Lab2_NguyenCongMinh_CSE422.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Device Management System";
}

<div class="hero-section text-center">
    <div class="container">
        <h1>Device Management System</h1>
        <p class="lead">Efficiently manage and track your organization's devices</p>
    </div>
</div>

<div class="container">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="feature-icon">
                    <i class="fas fa-laptop"></i>
                </div>
                <div class="stats-number">@Model.TotalDevices</div>
                <div class="stats-label">Total Devices</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="feature-icon">
                    <i class="fas fa-tags"></i>
                </div>
                <div class="stats-number">@Model.TotalCategories</div>
                <div class="stats-label">Categories</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="feature-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stats-number">@Model.TotalUsers</div>
                <div class="stats-label">Users</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="feature-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stats-number">@Model.DevicesInUse</div>
                <div class="stats-label">Devices In Use</div>
            </div>
        </div>
    </div>

    <!-- Device Status -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Device Status Overview</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center">
                                <h3 class="text-success">@Model.DevicesInUse</h3>
                                <p>In Use</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <h3 class="text-danger">@Model.DevicesBroken</h3>
                                <p>Broken</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <h3 class="text-warning">@Model.DevicesInMaintenance</h3>
                                <p>Under Maintenance</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
            // Add any dashboard-specific JavaScript here
        });
    </script>
}
