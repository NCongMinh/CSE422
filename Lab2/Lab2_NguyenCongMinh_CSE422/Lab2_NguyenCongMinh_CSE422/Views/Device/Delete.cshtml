@model Lab2_NguyenCongMinh_CSE422.Models.Device

@{
    ViewData["Title"] = "Delete Device";
}

<div class="container">
    <h1>Delete Device</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this device?</h3>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Code)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Code)</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3">Date of Entry</dt>
                <dd class="col-sm-9">@Model.DateOfEntry.ToShortDateString()</dd>

                <dt class="col-sm-3">Assigned User</dt>
                <dd class="col-sm-9">@(Model.User?.FullName ?? "Not Assigned")</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
