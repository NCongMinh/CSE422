@model Lab2_NguyenCongMinh_CSE422.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h2 class="text-center mb-0">Delete User</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Are you sure you want to delete this user?</h4>
                        <p>This action cannot be undone.</p>
                    </div>

                    @if (ViewBag.HasAssignedDevices == true)
                    {
                        <div class="alert alert-info">
                            <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Assigned Devices</h5>
                            <p>This user has the following devices assigned:</p>
                            <ul>
                                @foreach (var device in ViewBag.AssignedDevices)
                                {
                                    <li>@device.Name (@device.Code)</li>
                                }
                            </ul>
                            <p class="mb-0">These devices will be unassigned when the user is deleted.</p>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
